.page
  max-width 100%
  margin auto auto
  background-color $color-f5
  position fixed
  width 100%
  height 100%
  left 0
  right 0
  font-family "Hiragino Sans GB"


.iconfont
  font-size: 24px
  color: #fff
  &:active
    opacity: 0.7

.header-bar
  height: 44px
  line-height: 44px
  text-align: center;
  padding: 0px 15px
  span
    display: inline-block
    height: 20px
    line-height: 20px
    background-color: #0484cc
    border-radius: 10px
    padding: 0px 15px
    font-size: 12px;

.fd
  position: fixed
  height: 50px
  bottom: 0px
  width: 100%
  background-color #333
  max-width: 768px
  left: 0
  right: 0
  margin: 0 auto
  z-index:6

.container
  position: fixed
  top: 44px
  bottom: 0px
  width: 100%
  max-width: 768px
  left: 0
  right: 0
  margin: 0 auto

.amount
  width 22%
  left 37%
  color #999
  position absolute
  .weui-cell_unit
    float right
