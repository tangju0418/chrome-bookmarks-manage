.page
  max-width 100%
  margin auto auto
  background-color $color-f5
  position fixed
  width 100%
  height 100%
  left 0
  right 0
  font-family "Hiragino Sans GB"

.content
  position absolute
  width 100%
  top 40px
  bottom 0
  overflow auto

.iconfont
  font-size: 24px
  color: #fff
  &:active
    opacity: 0.7


.v-invalid
  top 8px
  right 15px
  position absolute

.register
  width 96% !important
  margin 80px auto 20px
  height 46px
  line-height 46px
  border 1px solid #d9d9d9
  background-color #47cfb9
  &:active
    border 1px solid #ccc
    background-color #43ab9a
